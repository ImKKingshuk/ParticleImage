{
  "name": "particleimage",
  "version": "1.0.0",
  "description": "A library for creating particle effects from images",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "npm run build:react && npm run build:vue && npm run build:svelte",
    "build:react": "tsup src/react/index.ts --format cjs,esm --dts --external vue,svelte",
    "build:vue": "vite build --config vite.config.vue.js",
    "build:svelte": "rollup -c rollup.config.svelte.js",
    "test": "vitest",
    "lint": "eslint . --ext .ts,.tsx,.vue,.svelte",
    "prepare": "npm run build"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "vue": "^3.0.0",
    "svelte": "^3.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.58",
    "@types/node": "^20.11.20",
    "@types/react-dom": "^18.2.19",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-vue": "^9.22.0",
    "eslint-plugin-svelte": "^2.35.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tsup": "^8.0.2",
    "typescript": "^5.3.3",
    "vitest": "^1.3.1",
    "vue": "^3.4.20",
    "svelte": "^4.2.12",
    "vite": "^5.1.4",
    "@vitejs/plugin-vue": "^5.0.4",
    "rollup": "^4.12.0",
    "rollup-plugin-svelte": "^7.1.6",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-typescript": "^11.1.6",
    "svelte-preprocess": "^5.1.3"
  }
}
